<h1><span id="comment-count">10</span> Comments</h1>
<div id="comments-list">
    <div class="comment">
        <div>
            By <span>author</span>
            on <span>date</span>
        </div>
        <div>
            comment text
        </div>
    </div>
</div>
<form action="">
    <label for="comment-author">Name</label>
    <input type="text" name="author" id="comment-author"/>
    <label for="comment-email">Email</label>
    <input type="email" name="email" id="comment-email"/>
    <label for="comment-text">Comment</label>
    <textarea name="comment-text" id="comment-text" cols="30" rows="10"></textarea>
    <button type="submit">Post Comment</button>
</form>
